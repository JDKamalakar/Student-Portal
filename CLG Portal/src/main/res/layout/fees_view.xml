<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="20dp"
    android:id="@+id/fees_payCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pending"
            android:id="@+id/feesStatus"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@color/pixelred"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="4dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Fees Title"
                android:textSize="20sp"
                android:layout_weight="1"
                android:id="@+id/feesTitle"
                android:textColor="@color/black"
                android:paddingVertical="6dp"
                android:layout_marginHorizontal="20dp"></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="60000"
                android:gravity="center"
                android:id="@+id/feesAmount"
                android:textStyle="bold"
                android:paddingVertical="6dp"
                android:layout_marginHorizontal="20dp"
                android:layout_weight="1"
                android:textSize="20sp"></TextView>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>