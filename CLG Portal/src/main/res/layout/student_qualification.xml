<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/fragment_style2"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/qualificationCard"
        app:cardElevation="20dp"
        app:cardCornerRadius="16dp"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SSC"
                android:textSize="24sp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:maxLines="1"
                android:background="@drawable/fragment_style2"
                android:textStyle="bold"
                android:id="@+id/eduMain"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Degree:"
                        android:textSize="18sp"
                        android:padding="6dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SSC -SSC"
                        android:layout_gravity="start"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:padding="6dp"
                        android:id="@+id/eduDegree"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Exam Name:"
                        android:textSize="18sp"
                        android:padding="6dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CID"
                        android:layout_gravity="start"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:padding="6dp"
                        android:id="@+id/nameExam"/>
                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Result Class:"
                        android:textSize="18sp"
                        android:padding="6dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pass"
                        android:layout_gravity="start"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:padding="6dp"
                        android:id="@+id/resultClass"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Board:"
                        android:textSize="18sp"
                        android:padding="6dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GSEB"
                        android:layout_gravity="start"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:padding="6dp"
                        android:id="@+id/eduBoard"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="School Name:"
                        android:gravity="left"
                        android:textSize="18sp"
                        android:padding="6dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SVVM"
                        android:layout_gravity="start"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:padding="6dp"
                        android:id="@+id/nameSchool"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Passing Month - Year:"
                        android:textSize="18sp"
                        android:padding="6dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2020 - 2021"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_gravity="start"
                        android:padding="6dp"
                        android:id="@+id/passingYear"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Seat No./Enrollment No. :"
                        android:textSize="18sp"
                        android:layout_gravity="start"
                        android:padding="6dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="26schg"
                        android:layout_gravity="start"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:padding="6dp"
                        android:id="@+id/noSeat"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Marks:"
                    android:textSize="18sp"
                    android:padding="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 100"
                    android:textSize="18sp"
                    android:layout_gravity="start"
                    android:gravity="left"
                    android:padding="6dp"
                    android:textStyle="bold"
                    android:id="@+id/marksTotal"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Obtianed Marks:"
                    android:textSize="18sp"
                    android:padding="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 50"
                    android:textSize="18sp"
                    android:layout_gravity="start"
                    android:padding="6dp"
                    android:textStyle="bold"
                    android:id="@+id/obtainedMarks"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Percentage:"
                    android:textSize="18sp"
                    android:padding="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text=" 50%"
                    android:textSize="18sp"
                    android:padding="6dp"
                    android:textStyle="bold"
                    android:id="@+id/percentage"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="State:"
                    android:textSize="18sp"
                    android:padding="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text=" Tokyo"
                    android:textSize="18sp"
                    android:padding="6dp"
                    android:textStyle="bold"
                    android:id="@+id/eduState"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:text="City:"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text=" Tokyo"
                    android:textSize="18sp"
                    android:padding="6dp"
                    android:textStyle="bold"
                    android:id="@+id/eduCity"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:text="Place of Study:"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text=" School"
                    android:textSize="18sp"
                    android:padding="6dp"
                    android:textStyle="bold"
                    android:id="@+id/placeStudy"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Primary Language:"
                    android:textSize="18sp"
                    android:padding="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text=" Japanese"
                    android:textSize="18sp"
                    android:padding="6dp"
                    android:textStyle="bold"
                    android:id="@+id/eduLanguage"/>
            </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>